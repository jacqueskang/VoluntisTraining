{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sendGridKey": {
      "type": "securestring",
      "metadata": {
        "description": "SendGrid key"
      }
    }
  },
  "variables": {
    "aspName": "[concat('asp-covid19-', uniqueString(resourceGroup().id))]",
    "appName": "[concat('app-covid19-', uniqueString(resourceGroup().id))]",
    "topicName": "[concat('topic-covid19-', uniqueString(resourceGroup().id))]",
    "storageAccountName": "[concat('stcovid19', uniqueString(resourceGroup().id))]",
    "aspNameFunctions": "[concat('asp-covid19-', uniqueString(resourceGroup().id), '-functions')]",
    "funName": "[concat('fun-covid19-', uniqueString(resourceGroup().id))]",
    "appInsightsName": "[concat('ais-covid19-', uniqueString(resourceGroup().id))]",
    "databaseAccountName": "[concat('dba-codiv19-', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "name": "[variables('aspName')]",
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "F1",
        "capacity": 1
      }
    },
    {
      "name": "[variables('appName')]",
      "type": "Microsoft.Web/sites",
      "apiVersion": "2019-08-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[variables('aspName')]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('aspName'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "Topic:Endpoint",
              "value": "[reference(variables('topicName')).endpoint]"
            },
            {
              "name": "Topic:AccessKey",
              "value": "[listKeys(variables('topicName'), '2019-06-01').key1]"
            }
          ],
          "connectionStrings": [
          ]
        }
      }
    },
    {
      "type": "Microsoft.EventGrid/topics",
      "apiVersion": "2019-06-01",
      "name": "[variables('topicName')]",
      "location": "[resourceGroup().location]"
    },
    {
      "name": "[variables('storageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2019-04-01",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "accessTier": "Hot"
      }
    },
    {
      "name": "[variables('aspNameFunctions')]",
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Y1"
      },
      "kind": "functionapp"
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-11-01",
      "name": "[variables('funName')]",
      "location": "[resourceGroup().location]",
      "kind": "functionapp",
      "dependsOn": [
        "[variables('aspNameFunctions')]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('aspNameFunctions'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(variables('storageAccountName'), '2019-04-01').keys[0].value)]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~2"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "dotnet"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(variables('storageAccountName'), '2019-04-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[variables('funName')]"
            },
            {
              "name": "Topic:Endpoint",
              "value": "[reference(variables('topicName')).endpoint]"
            },
            {
              "name": "Topic:AccessKey",
              "value": "[listKeys(variables('topicName'), '2019-06-01').key1]"
            },
            {
              "name": "SendGridKey",
              "value": "[parameters('sendGridKey')]"
            },
            {
              "name": "CosmosDBConnectionString",
              "value": "[listConnectionStrings(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('databaseAccountName')), '2019-12-12').connectionStrings[0].connectionString]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(variables('appInsightsName'), '2015-05-01').InstrumentationKey]"
            }
          ],
          "connectionStrings": [],
          "ipSecurityRestrictions": [],
          "scmIpSecurityRestrictions": [],
          "cors": {
            "allowedOrigins": [
              "http://localhost:62194"
            ]
          }
        },
        "httpsOnly": true
      }
    },
    {
      "name": "[variables('appInsightsName')]",
      "type": "Microsoft.Insights/components",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "name": "[variables('databaseAccountName')]",
      "apiVersion": "2019-08-01",
      "kind": "GlobalDocumentDB",
      "location": "[resourceGroup().location]",
      "properties": {
        "consistencyPolicy": {
          "defaultConsistencyLevel": "Eventual"
        },
        "locations": [
          {
            "locationName": "[resourceGroup().location]",
            "failoverPriority": 0
          }
        ],
        "databaseAccountOfferType": "Standard"
      },
      "resources": [
        {
          "type": "sqlDatabases",
          "name": "cosmosdb-covid19",
          "apiVersion": "2019-08-01",
          "dependsOn": [
            "[variables('databaseAccountName')]"
          ],
          "properties": {
            "resource": {
              "id": "cosmosdb-covid19"
            }
          },
          "resources": [
            {
              "type": "containers",
              "name": "patients",
              "apiVersion": "2019-08-01",
              "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', variables('databaseAccountName'), 'cosmosdb-covid19')]"
              ],
              "properties": {
                "resource": {
                  "id": "patients",
                  "partitionKey": {
                    "paths": [
                      "/userName"
                    ],
                    "kind": "Hash"
                  },
                  "indexingPolicy": {
                    "indexingMode": "consistent",
                    "includedPaths": [
                      {
                        "path": "/*"
                      }
                    ],
                    "excludedPaths": [
                    ]
                  }
                }
              }
            }
          ]
        }

      ]
    }
  ]
}
