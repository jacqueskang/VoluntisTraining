{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "aspName": "[concat('asp-', uniqueString(resourceGroup().id))]",
    "appName": "[concat('app-', uniqueString(resourceGroup().id))]",
    "topicName": "[concat('topic-', uniqueString(resourceGroup().id))]",
    "storageAccountName": "[concat('st', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "name": "[variables('aspName')]",
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "F1",
        "capacity": 1
      }
    },
    {
      "name": "[variables('appName')]",
      "type": "Microsoft.Web/sites",
      "apiVersion": "2019-08-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[variables('aspName')]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('aspName'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "Topic:Endpoint",
              "value": "[reference(variables('topicName')).endpoint]"
            },
            {
              "name": "Topic:AccessKey",
              "value": "[listKeys(variables('topicName'), '2019-06-01').key1]"
            }
          ],
          "connectionStrings": [
          ]
        }
      }
    },
    {
      "type": "Microsoft.EventGrid/topics",
      "apiVersion": "2019-06-01",
      "name": "[variables('topicName')]",
      "location": "[resourceGroup().location]"
    },
    {
      "name": "[variables('storageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2019-04-01",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "accessTier": "Hot"
      }
    }
  ]
}
